ew_SNGP13RNGC,AUD_new_SNGP13WPN1,AUD_new_SNGP13WPN2, AUD_old_SNGP10MOD,AUD_old_SNGP10PGC,AUD_old_SNGP10TOPE,AUD_old_SNGP13CHR1,AUD_old_SNGP13COD,AUD_old_SNGP13EXCL,AUD_old_SNGP13LTC1,AUD_old_SNGP13LTC2,AUD_old_SNGP13PGM1,AUD_old_SNGP13PGM2,AUD_old_SNGP13RNGC,AUD_old_SNGP13WPN1,AUD_old_SNGP13WPN2, AUD_SNGP13_GuidKey ,AUD_SNGP13_UOn,AUD_SNGP13_UT ,AUD_SNGP13_UBR ,AUD_SNGP13_UBC ,AUD_SNGP13_UBT ,AUD_SNGP13_UBU ,AUD_SNGP13_UBA ,AUD_SNGP13_UBS ,AUD_SNGP13_UBP ,AUD_SNGP13_UBM ,AUD_SNGP13_UAs )     VALUES (:new.SNGP10MOD,:new.SNGP10PGC,:new.SNGP10TOPE,:new.SNGP13CHR1,:new.SNGP13COD,:new.SNGP13EXCL,:new.SNGP13LTC1,:new.SNGP13LTC2,:new.SNGP13PGM1,:new.SNGP13PGM2,:new.SNGP13RNGC,:new.SNGP13WPN1,:new.SNGP13WPN2,  :old.SNGP10MOD,:old.SNGP10PGC,:old.SNGP10TOPE,:old.SNGP13CHR1,:old.SNGP13COD,:old.SNGP13EXCL,:old.SNGP13LTC1,:old.SNGP13LTC2,:old.SNGP13PGM1,:old.SNGP13PGM2,:old.SNGP13RNGC,:old.SNGP13WPN1,:old.SNGP13WPN2,  SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'U' ); END T_AUD_SNGP13_AUD_U;
