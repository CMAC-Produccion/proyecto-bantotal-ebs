CREATE OR REPLACE TRIGGER T_AUD_FSR002_AUD_U  AFTER UPDATE ON FSR002  FOR EACH ROW    DECLARE	     RequestNumber VARCHAR2(50);      UserName VARCHAR2(50); 	  WrkstName VARCHAR2(50); 	  Server VARCHAR2(50); 	  Application VARCHAR2(50); 	  ProgramName VARCHAR2(50); 	  TransactionNumber VARCHAR2(50); 	  ConnectionId VARCHAR2(50);      ExistConData NUMBER;    BEGIN      SELECT sys_context('USERENV', 'SID') INTO ConnectionId FROM dual;      SELECT COUNT(*) INTO ExistConData FROM DBA_OBJECTS WHERE OWNER=sys_context( 'userenv', 'current_schema' ) AND OBJECT_TYPE = 'TABLE' AND OBJECT_NAME = 'CONDATA';      IF ExistConData > 0 THEN 		 SELECT MAX(Value) INTO RequestNumber FROM CONDATA WHERE Data ='REQUESTID'; 		 SELECT MAX(Value) INTO UserName FROM CONDATA WHERE Data ='USERID'; 		 SELECT MAX(Value) INTO WrkstName FROM CONDATA WHERE Data ='WRKST'; 		 SELECT MAX(Value) INTO Server FROM CONDATA WHERE Data ='SERVER'; 		 SELECT MAX(Value) INTO Application FROM CONDATA WHERE Data ='APPLICATION'; 		 SELECT MAX(Value) INTO ProgramName FROM CONDATA WHERE Data ='PROGRAM';      END IF;     RequestNumber := COALESCE(RequestNumber,'-1');     TransactionNumber := COALESCE(TransactionNumber,'-1');     ConnectionId := COALESCE(ConnectionId,'-1');     SELECT COALESCE(UserName,sys_context('USERENV', 'SESSION_USER'),'NOTDEFINED') INTO UserName FROM dual;     SELECT COALESCE(WrkstName,sys_context('USERENV', 'HOST'),'NOTDEFINED') INTO WrkstName FROM dual;     SELECT COALESCE(Server,sys_context('USERENV', 'SERVER_HOST'),'NOTDEFINED') INTO Server FROM dual;     SELECT COALESCE(Application,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO Application FROM dual;     SELECT COALESCE(ProgramName,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO ProgramName FROM dual;     INSERT INTO BANTPROD.AUD_FSR002_AUDIT (AUD_new_PENDOC,AUD_new_PEPAIS,AUD_new_PETDOC,AUD_new_RPCCYG,AUD_new_RPNDOC,AUD_new_RPPAIS,AUD_new_RPRPAT,AUD_new_RPTDOC, AUD_old_PENDOC,AUD_old_PEPAIS,AUD_old_PETDOC,AUD_old_RPCCYG,AUD_old_RPNDOC,AUD_old_RPPAIS,AUD_old_RPRPAT,AUD_old_RPTDOC, AUD_FSR002_GuidKey ,AUD_FSR002_UOn,AUD_FSR002_UT ,AUD_FSR002_UBR ,AUD_FSR002_UBC ,AUD_FSR002_UBT ,AUD_FSR002_UBU ,AUD_FSR002_UBA ,AUD_FSR002_UBS ,AUD_FSR002_UBP ,AUD_FSR002_UBM ,AUD_FSR002_UAs )     VALUES (:new.PENDOC,:new.PEPAIS,:new.PETDOC,:new.RPCCYG,:new.RPNDOC,:new.RPPAIS,:new.RPRPAT,:new.RPTDOC,  :old.PENDOC,:old.PEPAIS,:old.PETDOC,:old.RPCCYG,:old.RPNDOC,:old.RPPAIS,:old.RPRPAT,:old.RPTDOC,  SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'U' ); END T_AUD_FSR002_AUD_U;
/

