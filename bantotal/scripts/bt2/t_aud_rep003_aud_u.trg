w_REP003LARG,AUD_new_REP003NIV,AUD_new_REP003PREC,AUD_new_REP003TYPE, AUD_old_REP001COD,AUD_old_REP002CONS,AUD_old_REP003CAYU,AUD_old_REP003CDSC,AUD_old_REP003CNOM,AUD_old_REP003COL,AUD_old_REP003CVDE,AUD_old_REP003DSC,AUD_old_REP003EXP,AUD_old_REP003GPBY,AUD_old_REP003LARG,AUD_old_REP003NIV,AUD_old_REP003PREC,AUD_old_REP003TYPE, AUD_REP003_GuidKey ,AUD_REP003_UOn,AUD_REP003_UT ,AUD_REP003_UBR ,AUD_REP003_UBC ,AUD_REP003_UBT ,AUD_REP003_UBU ,AUD_REP003_UBA ,AUD_REP003_UBS ,AUD_REP003_UBP ,AUD_REP003_UBM ,AUD_REP003_UAs )     VALUES (:new.REP001COD,:new.REP002CONS,:new.REP003CAYU,:new.REP003CDSC,:new.REP003CNOM,:new.REP003COL,:new.REP003CVDE,:new.REP003DSC,:new.REP003EXP,:new.REP003GPBY,:new.REP003LARG,:new.REP003NIV,:new.REP003PREC,:new.REP003TYPE,  :old.REP001COD,:old.REP002CONS,:old.REP003CAYU,:old.REP003CDSC,:old.REP003CNOM,:old.REP003COL,:old.REP003CVDE,:old.REP003DSC,:old.REP003EXP,:old.REP003GPBY,:old.REP003LARG,:old.REP003NIV,:old.REP003PREC,:old.REP003TYPE,  SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'U' ); END T_AUD_REP003_AUD_U;
