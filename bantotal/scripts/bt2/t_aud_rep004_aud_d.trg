CREATE OR REPLACE TRIGGER T_AUD_REP004_AUD_D  AFTER DELETE ON REP004  FOR EACH ROW    DECLARE	     RequestNumber VARCHAR2(50);      UserName VARCHAR2(50); 	  WrkstName VARCHAR2(50); 	  Server VARCHAR2(50); 	  Application VARCHAR2(50); 	  ProgramName VARCHAR2(50); 	  TransactionNumber VARCHAR2(50); 	  ConnectionId VARCHAR2(50);      ExistConData NUMBER;    BEGIN      SELECT sys_context('USERENV', 'SID') INTO ConnectionId FROM dual;      SELECT COUNT(*) INTO ExistConData FROM DBA_OBJECTS WHERE OWNER=sys_context( 'userenv', 'current_schema' ) AND OBJECT_TYPE = 'TABLE' AND OBJECT_NAME = 'CONDATA';      IF ExistConData > 0 THEN 		 SELECT MAX(Value) INTO RequestNumber FROM CONDATA WHERE Data ='REQUESTID'; 		 SELECT MAX(Value) INTO UserName FROM CONDATA WHERE Data ='USERID'; 		 SELECT MAX(Value) INTO WrkstName FROM CONDATA WHERE Data ='WRKST'; 		 SELECT MAX(Value) INTO Server FROM CONDATA WHERE Data ='SERVER'; 		 SELECT MAX(Value) INTO Application FROM CONDATA WHERE Data ='APPLICATION'; 		 SELECT MAX(Value) INTO ProgramName FROM CONDATA WHERE Data ='PROGRAM';      END IF;     RequestNumber := COALESCE(RequestNumber,'-1');     TransactionNumber := COALESCE(TransactionNumber,'-1');     ConnectionId := COALESCE(ConnectionId,'-1');     SELECT COALESCE(UserName,sys_context('USERENV', 'SESSION_USER'),'NOTDEFINED') INTO UserName FROM dual;     SELECT COALESCE(WrkstName,sys_context('USERENV', 'HOST'),'NOTDEFINED') INTO WrkstName FROM dual;     SELECT COALESCE(Server,sys_context('USERENV', 'SERVER_HOST'),'NOTDEFINED') INTO Server FROM dual;     SELECT COALESCE(Application,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO Application FROM dual;     SELECT COALESCE(ProgramName,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO ProgramName FROM dual;      INSERT INTO BANTPROD.AUD_REP004_AUDIT (AUD_old_REP001COD,AUD_old_REP001PARMDSC,AUD_old_REP004CAYU,AUD_old_REP004CDSC,AUD_old_REP004CNOM,AUD_old_REP004CVDE,AUD_old_REP004LARG,AUD_old_REP004PARMCOD,AUD_old_REP004PARMTYPE,AUD_old_REP004PHPR,AUD_old_REP004PPROMPT,AUD_old_REP004PRCONS,AUD_old_REP004PREC,AUD_old_REP004PRREP, AUD_REP004_GuidKey ,AUD_REP004_UOn,AUD_REP004_UT ,AUD_REP004_UBR ,AUD_REP004_UBC ,AUD_REP004_UBT ,AUD_REP004_UBU ,AUD_REP004_UBA ,AUD_REP004_UBS ,AUD_REP004_UBP ,AUD_REP004_UBM ,AUD_REP004_UAs )      VALUES (:old.REP001COD,:old.REP001PARMDSC,:old.REP004CAYU,:old.REP004CDSC,:old.REP004CNOM,:old.REP004CVDE,:old.REP004LARG,:old.REP004PARMCOD,:old.REP004PARMTYPE,:old.REP004PHPR,:old.REP004PPROMPT,:old.REP004PRCONS,:old.REP004PREC,:old.REP004PRREP, SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'D' ); END T_AUD_REP004_AUD_D;
