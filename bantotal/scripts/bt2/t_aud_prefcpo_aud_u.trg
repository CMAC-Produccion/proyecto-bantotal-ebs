CREATE OR REPLACE TRIGGER T_AUD_PREFCPO_AUD_U  AFTER UPDATE ON PREFCPO  FOR EACH ROW    DECLARE	     RequestNumber VARCHAR2(50);      UserName VARCHAR2(50); 	  WrkstName VARCHAR2(50); 	  Server VARCHAR2(50); 	  Application VARCHAR2(50); 	  ProgramName VARCHAR2(50); 	  TransactionNumber VARCHAR2(50); 	  ConnectionId VARCHAR2(50);      ExistConData NUMBER;    BEGIN      SELECT sys_context('USERENV', 'SID') INTO ConnectionId FROM dual;      SELECT COUNT(*) INTO ExistConData FROM DBA_OBJECTS WHERE OWNER=sys_context( 'userenv', 'current_schema' ) AND OBJECT_TYPE = 'TABLE' AND OBJECT_NAME = 'CONDATA';      IF ExistConData > 0 THEN 		 SELECT MAX(Value) INTO RequestNumber FROM CONDATA WHERE Data ='REQUESTID'; 		 SELECT MAX(Value) INTO UserName FROM CONDATA WHERE Data ='USERID'; 		 SELECT MAX(Value) INTO WrkstName FROM CONDATA WHERE Data ='WRKST'; 		 SELECT MAX(Value) INTO Server FROM CONDATA WHERE Data ='SERVER'; 		 SELECT MAX(Value) INTO Application FROM CONDATA WHERE Data ='APPLICATION'; 		 SELECT MAX(Value) INTO ProgramName FROM CONDATA WHERE Data ='PROGRAM';      END IF;     RequestNumber := COALESCE(RequestNumber,'-1');     TransactionNumber := COALESCE(TransactionNumber,'-1');     ConnectionId := COALESCE(ConnectionId,'-1');     SELECT COALESCE(UserName,sys_context('USERENV', 'SESSION_USER'),'NOTDEFINED') INTO UserName FROM dual;     SELECT COALESCE(WrkstName,sys_context('USERENV', 'HOST'),'NOTDEFINED') INTO WrkstName FROM dual;     SELECT COALESCE(Server,sys_context('USERENV', 'SERVER_HOST'),'NOTDEFINED') INTO Server FROM dual;     SELECT COALESCE(Application,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO Application FROM dual;     SELECT COALESCE(ProgramName,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO ProgramName FROM dual;     INSERT INTO BANTPROD.AUD_PREFCPO_AUDIT (AUD_new_PRFCAT,AUD_new_PRFCPO,AUD_new_PRFCPOCTL,AUD_new_PRFCPOEDT,AUD_new_PRFCPOFRZ2,AUD_new_PRFCPOFRZC,AUD_new_PRFCPOFRZN,AUD_new_PRFCPOGRB,AUD_new_PRFCPOHAB,AUD_new_PRFCPOORD,AUD_new_PRFCPOTCOD,AUD_new_PRFCPOTIT,AUD_new_PRFEMP,AUD_new_PRFMOD,AUD_new_PRFTRN, AUD_old_PRFCAT,AUD_old_PRFCPO,AUD_old_PRFCPOCTL,AUD_old_PRFCPOEDT,AUD_old_PRFCPOFRZ2,AUD_old_PRFCPOFRZC,AUD_old_PRFCPOFRZN,AUD_old_PRFCPOGRB,AUD_old_PRFCPOHAB,AUD_old_PRFCPOORD,AUD_old_PRFCPOTCOD,AUD_old_PRFCPOTIT,AUD_old_PRFEMP,AUD_old_PRFMOD,AUD_old_PRFTRN, AUD_PREFCPO_GuidKey ,AUD_PREFCPO_UOn,AUD_PREFCPO_UT ,AUD_PREFCPO_UBR ,AUD_PREFCPO_UBC ,AUD_PREFCPO_UBT ,AUD_PREFCPO_UBU ,AUD_PREFCPO_UBA ,AUD_PREFCPO_UBS ,AUD_PREFCPO_UBP ,AUD_PREFCPO_UBM ,AUD_PREFCPO_UAs )     VALUES (:new.PRFCAT,:new.PRFCPO,:new.PRFCPOCTL,:new.PRFCPOEDT,:new.PRFCPOFRZ2,:new.PRFCPOFRZC,:new.PRFCPOFRZN,:new.PRFCPOGRB,:new.PRFCPOHAB,:new.PRFCPOORD,:new.PRFCPOTCOD,:new.PRFCPOTIT,:new.PRFEMP,:new.PRFMOD,:new.PRFTRN,  :old.PRFCAT,:old.PRFCPO,:old.PRFCPOCTL,:old.PRFCPOEDT,:old.PRFCPOFRZ2,:old.PRFCPOFRZC,:old.PRFCPOFRZN,:old.PRFCPOGRB,:old.PRFCPOHAB,:old.PRFCPOORD,:old.PRFCPOTCOD,:old.PRFCPOTIT,:old.PRFEMP,:old.PRFMOD,:old.PRFTRN,  SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'U' ); END T_AUD_PREFCPO_AUD_U;
