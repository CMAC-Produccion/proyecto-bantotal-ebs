AUD_old_XPRECOCOD,AUD_old_XPRECOIMP,AUD_old_XPREMOD,AUD_old_XPREMODIF,AUD_old_XPREMONEDA,AUD_old_XPREPAPEL,AUD_old_XPRETOPE, AUD_X054029_GuidKey ,AUD_X054029_UOn,AUD_X054029_UT ,AUD_X054029_UBR ,AUD_X054029_UBC ,AUD_X054029_UBT ,AUD_X054029_UBU ,AUD_X054029_UBA ,AUD_X054029_UBS ,AUD_X054029_UBP ,AUD_X054029_UBM ,AUD_X054029_UAs )     VALUES (:new.PGCOD,:new.XPRECOBRA,:new.XPRECOCOD,:new.XPRECOIMP,:new.XPREMOD,:new.XPREMODIF,:new.XPREMONEDA,:new.XPREPAPEL,:new.XPRETOPE,  :old.PGCOD,:old.XPRECOBRA,:old.XPRECOCOD,:old.XPRECOIMP,:old.XPREMOD,:old.XPREMODIF,:old.XPREMONEDA,:old.XPREPAPEL,:old.XPRETOPE,  SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'U' ); END T_AUD_X054029_AUD_U;
