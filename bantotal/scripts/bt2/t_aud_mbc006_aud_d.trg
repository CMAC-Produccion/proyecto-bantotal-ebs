CREATE OR REPLACE TRIGGER T_AUD_MBC006_AUD_D  AFTER DELETE ON MBC006  FOR EACH ROW    DECLARE	     RequestNumber VARCHAR2(50);      UserName VARCHAR2(50); 	  WrkstName VARCHAR2(50); 	  Server VARCHAR2(50); 	  Application VARCHAR2(50); 	  ProgramName VARCHAR2(50); 	  TransactionNumber VARCHAR2(50); 	  ConnectionId VARCHAR2(50);      ExistConData NUMBER;    BEGIN      SELECT sys_context('USERENV', 'SID') INTO ConnectionId FROM dual;      SELECT COUNT(*) INTO ExistConData FROM DBA_OBJECTS WHERE OWNER=sys_context( 'userenv', 'current_schema' ) AND OBJECT_TYPE = 'TABLE' AND OBJECT_NAME = 'CONDATA';      IF ExistConData > 0 THEN 		 SELECT MAX(Value) INTO RequestNumber FROM CONDATA WHERE Data ='REQUESTID'; 		 SELECT MAX(Value) INTO UserName FROM CONDATA WHERE Data ='USERID'; 		 SELECT MAX(Value) INTO WrkstName FROM CONDATA WHERE Data ='WRKST'; 		 SELECT MAX(Value) INTO Server FROM CONDATA WHERE Data ='SERVER'; 		 SELECT MAX(Value) INTO Application FROM CONDATA WHERE Data ='APPLICATION'; 		 SELECT MAX(Value) INTO ProgramName FROM CONDATA WHERE Data ='PROGRAM';      END IF;     RequestNumber := COALESCE(RequestNumber,'-1');     TransactionNumber := COALESCE(TransactionNumber,'-1');     ConnectionId := COALESCE(ConnectionId,'-1');     SELECT COALESCE(UserName,sys_context('USERENV', 'SESSION_USER'),'NOTDEFINED') INTO UserName FROM dual;     SELECT COALESCE(WrkstName,sys_context('USERENV', 'HOST'),'NOTDEFINED') INTO WrkstName FROM dual;     SELECT COALESCE(Server,sys_context('USERENV', 'SERVER_HOST'),'NOTDEFINED') INTO Server FROM dual;     SELECT COALESCE(Application,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO Application FROM dual;     SELECT COALESCE(ProgramName,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO ProgramName FROM dual;      INSERT INTO BANTPROD.AUD_MBC006_AUDIT (AUD_old_MBC6AUX1,AUD_old_MBC6AUX2,AUD_old_MBCCAJ,AUD_old_MBCCEGR,AUD_old_MBCCFCH,AUD_old_MBCCHRA,AUD_old_MBCCING,AUD_old_MBCCINI,AUD_old_MBCCMON,AUD_old_MBCCTPO,AUD_old_MBCCUSU,AUD_old_MBCCVAL,AUD_old_MBCEGRIN,AUD_old_MBCEMP,AUD_old_MBCINGIN,AUD_old_MBCINIIN,AUD_old_MBCRUB,AUD_old_MBCSUC, AUD_MBC006_GuidKey ,AUD_MBC006_UOn,AUD_MBC006_UT ,AUD_MBC006_UBR ,AUD_MBC006_UBC ,AUD_MBC006_UBT ,AUD_MBC006_UBU ,AUD_MBC006_UBA ,AUD_MBC006_UBS ,AUD_MBC006_UBP ,AUD_MBC006_UBM ,AUD_MBC006_UAs )      VALUES (:old.MBC6AUX1,:old.MBC6AUX2,:old.MBCCAJ,:old.MBCCEGR,:old.MBCCFCH,:old.MBCCHRA,:old.MBCCING,:old.MBCCINI,:old.MBCCMON,:old.MBCCTPO,:old.MBCCUSU,:old.MBCCVAL,:old.MBCEGRIN,:old.MBCEMP,:old.MBCINGIN,:old.MBCINIIN,:old.MBCRUB,:old.MBCSUC, SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'D' ); END T_AUD_MBC006_AUD_D;
