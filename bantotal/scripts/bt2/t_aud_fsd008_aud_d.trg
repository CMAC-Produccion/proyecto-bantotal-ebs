CREATE OR REPLACE TRIGGER T_AUD_FSD008_AUD_D  AFTER DELETE ON FSD008  FOR EACH ROW    DECLARE	     RequestNumber VARCHAR2(50);      UserName VARCHAR2(50); 	  WrkstName VARCHAR2(50); 	  Server VARCHAR2(50); 	  Application VARCHAR2(50); 	  ProgramName VARCHAR2(50); 	  TransactionNumber VARCHAR2(50); 	  ConnectionId VARCHAR2(50);      ExistConData NUMBER;    BEGIN      SELECT sys_context('USERENV', 'SID') INTO ConnectionId FROM dual;      SELECT COUNT(*) INTO ExistConData FROM DBA_OBJECTS WHERE OWNER=sys_context( 'userenv', 'current_schema' ) AND OBJECT_TYPE = 'TABLE' AND OBJECT_NAME = 'CONDATA';      IF ExistConData > 0 THEN 		 SELECT MAX(Value) INTO RequestNumber FROM CONDATA WHERE Data ='REQUESTID'; 		 SELECT MAX(Value) INTO UserName FROM CONDATA WHERE Data ='USERID'; 		 SELECT MAX(Value) INTO WrkstName FROM CONDATA WHERE Data ='WRKST'; 		 SELECT MAX(Value) INTO Server FROM CONDATA WHERE Data ='SERVER'; 		 SELECT MAX(Value) INTO Application FROM CONDATA WHERE Data ='APPLICATION'; 		 SELECT MAX(Value) INTO ProgramName FROM CONDATA WHERE Data ='PROGRAM';      END IF;     RequestNumber := COALESCE(RequestNumber,'-1');     TransactionNumber := COALESCE(TransactionNumber,'-1');     ConnectionId := COALESCE(ConnectionId,'-1');     SELECT COALESCE(UserName,sys_context('USERENV', 'SESSION_USER'),'NOTDEFINED') INTO UserName FROM dual;     SELECT COALESCE(WrkstName,sys_context('USERENV', 'HOST'),'NOTDEFINED') INTO WrkstName FROM dual;     SELECT COALESCE(Server,sys_context('USERENV', 'SERVER_HOST'),'NOTDEFINED') INTO Server FROM dual;     SELECT COALESCE(Application,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO Application FROM dual;     SELECT COALESCE(ProgramName,sys_context('USERENV', 'ACTION'),'NOTDEFINED') INTO ProgramName FROM dual;      INSERT INTO BANTPROD.AUD_FSD008_AUDIT (AUD_old_CTCBCU,AUD_old_CTCCLI,AUD_old_CTCORP,AUD_old_CTCRIE,AUD_old_CTEJCT,AUD_old_CTEMPL,AUD_old_CTFALT,AUD_old_CTFBAJ,AUD_old_CTFCNF,AUD_old_CTIFIN,AUD_old_CTIMAB,AUD_old_CTNGTE,AUD_old_CTNOM,AUD_old_CTNRO,AUD_old_CTNROI,AUD_old_CTPIN,AUD_old_CTPROV,AUD_old_CTRCOR,AUD_old_CTRESI,AUD_old_CTSEGM,AUD_old_PGCOD,AUD_old_SECCOD, AUD_FSD008_GuidKey ,AUD_FSD008_UOn,AUD_FSD008_UT ,AUD_FSD008_UBR ,AUD_FSD008_UBC ,AUD_FSD008_UBT ,AUD_FSD008_UBU ,AUD_FSD008_UBA ,AUD_FSD008_UBS ,AUD_FSD008_UBP ,AUD_FSD008_UBM ,AUD_FSD008_UAs )      VALUES (:old.CTCBCU,:old.CTCCLI,:old.CTCORP,:old.CTCRIE,:old.CTEJCT,:old.CTEMPL,:old.CTFALT,:old.CTFBAJ,:old.CTFCNF,:old.CTIFIN,:old.CTIMAB,:old.CTNGTE,:old.CTNOM,:old.CTNRO,:old.CTNROI,:old.CTPIN,:old.CTPROV,:old.CTRCOR,:old.CTRESI,:old.CTSEGM,:old.PGCOD,:old.SECCOD, SYS_GUID(),SYSTIMESTAMP,SYSTIMESTAMP,RequestNumber,ConnectionId,TransactionNumber,UserName,Application,Server,ProgramName,WrkstName,'D' ); END T_AUD_FSD008_AUD_D;
